<div class="row">
  <div class="col">
    <div class="card">
      <div class="card-body">
        <div class="card-title">
          <h5>Activity Details</h5>
        </div>
        <p class="leading">
          Below are the details for the <%= workout_activity.activity.name %>
        </p>
        <hr>
        <div class="card-body">
          <dl class="row">
            <dt class="col-2">Name</dt>
            <dd class="col-9"><%= workout_activity.activity.name %></dd>
            <dt class="col-2">Sets</dt>
            <dd class="col-9"><%= workout_activity.series.set %></dd>
            <dt class="col-2">Reps</dt>
            <dd class="col-9"><%= workout_activity.series.rep %></dd>
            <dt class="col-2">Difficulty</dt>
            <dd class="col-9"><%= workout_activity.difficulty.titleize %></dd>
            <% if workout_activity.activity.has_weight %>
            <dt class="col-2">Weight</dt>
            <dd class="col-9"><%= workout_activity.variation.weight %> lbs</dd>
            <% end %>
            <dt class="col-2">Variation</dt>
            <dd class="col"><%= workout_activity.variation.description %></dd>
          </dl>
          <div class="row justify-content-start">
            <div class="col-6">
              <%= link_to("Edit", "", class: "btn btn-secondary") %>
              <%= button_to("Remove", admin_workout_activity_path(workout_activity), method: :delete, class: 'btn btn-danger inline-block') %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>