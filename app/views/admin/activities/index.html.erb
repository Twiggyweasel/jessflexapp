<p id="notice"><%= notice %></p>

<h1>Activities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Simple desc</th>
      <th>Detail desc</th>
      <th>Location</th>
      <th>Category</th>
      <th>Set label</th>
      <th>Has weight</th>
      <th>Machine based</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.name %></td>
        <td><%= activity.simple_desc %></td>
        <td><%= activity.detail_desc %></td>
        <td><%= activity.location %></td>
        <td><%= activity.category %></td>
        <td><%= activity.set_label %></td>
        <td><%= activity.has_weight %></td>
        <td><%= activity.machine_based %></td>
        <td><%= link_to 'Show', [:admin, activity] %></td>
        <td><%= link_to 'Edit', edit_admin_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', [:admin, activity], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

