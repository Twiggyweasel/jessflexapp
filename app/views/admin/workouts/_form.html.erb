<%= form_with(model: [:admin, workout]) do |f| %>
  <%- if workout.errors.any? %>
    <%= render partial: 'shared/form_errors', locals: { errors: workout.errors.full_messages} %>
  <% end %>
  <div class="mb-3">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control', rows: 3 %>
  </div>
  <div class="mb-3">
    <div class="form-check">
      <%= f.check_box :bundle_only, class: 'form-check-input' %>
      <%= f.label :bundle_only, class: 'form-check-label' %>
    </div>
  </div>
  <div class="mb-3">
    <%= f.label :status %>
    <%= f.select :status, options_for_select(Workout.statuses.keys.map { |key| [key.titleize, key] }, f.object.status), { placeholder: 'Select a status' } ,class: 'form-select' %>
  </div>

  <%= f.submit class: 'btn btn-success'%>
  <%= link_to "Cancel", workout.new_record? ? admin_workouts_path : admin_workout_path(workout), class: "btn btn-outline-secondary" %>
<% end %>