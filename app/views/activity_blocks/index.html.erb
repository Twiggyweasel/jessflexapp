<p id="notice"><%= notice %></p>

<h1>Activity Blocks</h1>

<table>
  <thead>
    <tr>
      <th>Activity</th>
      <th>Rep</th>
      <th>Set</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_blocks.each do |activity_block| %>
      <tr>
        <td><%= activity_block.activity_id %></td>
        <td><%= activity_block.rep %></td>
        <td><%= activity_block.set %></td>
        <td><%= activity_block.weight %></td>
        <td><%= link_to 'Show', activity_block %></td>
        <td><%= link_to 'Edit', edit_activity_block_path(activity_block) %></td>
        <td><%= link_to 'Destroy', activity_block, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

